
{% include 'header/header.html.twig' %}

<!DOCTYPE html>
<html >
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="../public/style/header/header.css">

    <title>{% block title %}onlineshop{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('style/registration/registration.css') }}">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>    {% endblock %}
</head>
<body>
{% block body %}{% endblock %}
</body>
<div class="overlay">
    {% block form %}
    <div class="maincontainer">
            <div class="container">
                <h1>Войти</h1>
            </div>
            <div class="cont">
            </div>
            <div class="main">
                <a href="../index.html"><img  class="close" src="../icons/CL.png"></a>
                <form action="{{ path('registration') }}" method="post">
                    <input type="text" name="login" placeholder="Логин" required/>
                    <input type="email" name="email" placeholder="Почта" required/>
                    <input type="password" name="password" placeholder="Пароль" required/>

                    <button type="submit"><span>Войти</span></button>
                </form>
            </div>
        </div>
</div>
{% endblock %}


</body>
</html>