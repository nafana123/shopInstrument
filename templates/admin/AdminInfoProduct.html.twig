            <input type="text" class="form-control" id="productWheels" name="wheels" value="{{ infoProduct.wheels  ?? '' }}">
        </div>
        <div class="mb-3">
            <label for="productDimensions" class="form-label">Габариты, мм</label>
            <input type="text" class="form-control" id="productDimensions" name="dimensions" value="{{ infoProduct.dimensions  ?? ''}}">
        </div>
        <div class="mb-3">
            <label for="productCountry" class="form-label">Страна производства</label>
            <input type="text" class="form-control" id="productCountry" name="country" value="{{ infoProduct.country  ?? ''}}">
        </div>
        <div class="mb-3">
            <label for="productMotherland" class="form-label">Родина бренда</label>
            <input type="text" class="form-control" id="productMotherland" name="motherland" value="{{ infoProduct.motherland  ?? ''}}">
