<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="{{ asset('style/katalog/katalog.css') }}">

</head>
<body>

<div class="container" >
    <h1 class="zag" id="katalog">Каталог</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-6">
        {% for type in types %}
            {% if type.deleted == 0 %}
            <article class="col" style="padding-bottom: 25px;">
                <a class="dropdown-item" href="{{ path('product', {'typeId': type.id, 'name': type.name}) }}">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ type.name }}</h5>
                            <img src="{{ asset('picture/katalog/' ~ type.img) }}" class="img-fluid" alt="...">
                        </div>
                    </div>
                </a>
            </article>
            {% endif %}
        {% endfor %}
    </div>
</div>
</body>
</html>