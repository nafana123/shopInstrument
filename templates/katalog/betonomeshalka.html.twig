{% include 'header/header.html.twig' %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="../public/style/header/header.css">
    <link rel="stylesheet" href="{{ asset('style/popularProducts/popularProducts.css') }}">


    <title>{% block title %}onlineshop{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    {% endblock %}

</head>
<body>
<div class="container">
    <nav style="--bs-breadcrumb-divider: '->';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('mainpage') }}" style="text-decoration: none; color: black">Главная</a></li>
            <li class="breadcrumb-item active" aria-current="page">ююю</li>
        </ol>
    </nav>
    <div class="row justify-content-center">
            <article class="col-sm-6 col-md-4 col-lg-3">
                <div class="cards">
                    <img src="{{ asset('picture/katalog/' ~ image) }}" class="img-fluid" alt="...">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ name }}</h5>
                        <h4 class="card-text">Цена: {{ price }} ₽</h4>
                        <button type="button" class="btn btn-success">Добавить в корзину</button>
                    </div>
                </div>
            </article>
        {% endfor %}
    </div>
</div>

</body>
</html>